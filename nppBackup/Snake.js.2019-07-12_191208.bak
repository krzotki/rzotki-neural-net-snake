class Snake
{
	constructor(brain)
	{
		this.x = 25;
		this.y = 0;
		this.width = 25;
		this.height = 25;
		this.length =1;
		this.body = [];
		//x y direction
		var headInst = [[25,0,"R"]];
		var tailInst = [[0,0,"R"]];
		this.head = new BodyPart(this.x,this.y,this.width,this.height,headInst);
		this.body.push(new BodyPart(this.x-this.width,this.y,this.width,this.height,tailInst));
	}
	update(ctx)
	{
		this.head.update(ctx,"#0000FF");
		for(var i in this.body)
		{
			this.body[i].update(ctx,"#00FF00");
		}
	}
	steer(direction)
	{
		this.head.instructions.push([this.head.x,this.head.y,direction]);
		for(var i in this.body)
		{
			this.body[i].instructions.push([this.head.x,this.head.y,direction]);
		}
	}
	enlarge()
	{
		var speedX = this.body[this.body.length-1].speedX;
		var speedY = this.body[this.body.length-1].speedY;
		var x,y;
		var lastElem = this.body[this.body.length-1];
		if(speedX>0)
		{
			x = lastElem.x-lastElem.width;
			y = lastElem.y;
		}
		if(speedX<0)
		{
			x = lastElem.x+lastElem.width;
			y =lastElem.y;
		}
		if(speedY<0)
		{
			y = lastElem.y+lastElem.height;
			x = lastElem.x;
		}
		if(speedY>0)
		{
			y = lastElem.y-lastElem.height;
			x = lastElem.x;
		}
		var temp;
		
		temp = new BodyPart(x,y,this.width,this.height,lastElem.instructions);
		if(temp.instructions.length==0)
		{
			temp.instructions.push(lastElem.lastInstruction);
		}
		temp.steer();
		temp.speedX = speedX;
		temp.speedY = speedY;
		this.body.push(temp);
		this.length++;
	}
}

//nie pushowac ostatnej instrukcji tylko wstawic na pcozatek


class BodyPart
{
	constructor(x,y,width,height,instructions)
	{
		this.x=x;
		this.y=y;
		this.width = width;
		this.height = height;
		this.instructions = instructions;
		this.lastInstruction;
		this.speedX=0;
		this.speedY=0;
	}
	update(ctx,color)
	{
		this.steer();
		this.x +=this.speedX;
		this.y +=this.speedY;
		ctx.fillStyle = color;
		ctx.fillRect(this.x,this.y,this.width,this.height);
	}
	steer()
	{
		for(var i=0;i<this.instructions.length;i++)
		{
			var inst = this.instructions[i];
			if(inst[0]==this.x && inst[1]==this.y)
			{
				var didTurn = false;
				if(inst[2]=="U" && this.speedY==0)
				{
					this.speedX=0;
					this.speedY=-this.height;
					didTurn=true;
				}
				if(inst[2]=="D"&& this.speedY==0)
				{
					this.speedX=0;
					this.speedY=this.height;
					didTurn=true;
				}
				if(inst[2]=="L"&&this.speedX==0)
				{
					this.speedY=0;
					this.speedX=-this.width;
					didTurn=true;
				}
				if(inst[2]=="R"&&this.speedX==0)
				{
					this.speedY=0;
					this.speedX=this.width;
					didTurn=true;
				}
				if(i==this.instructions.length-1)this.lastInstruction = this.instructions[i];
				if(didTurn)this.instructions.splice(i,1);
				
			}
			
		}
		return backup;
	}
	
}