//nie pushowac ostatnej instrukcji tylko wstawic na poczatek


class BodyPart
{
	constructor(x,y,width,height,instructions)
	{
		this.x=x;
		this.y=y;
		this.width = width;
		this.height = height;
		this.instructions = instructions;
		this.speedX=0;
		this.speedY=0;
		this.lastDirection;
	}
	update(ctx,color)
	{
		if(color=="#0000FF")
		{
			this.steer();
			this.x +=this.speedX;
			this.y +=this.speedY;
		}
		ctx.fillStyle = color;
		ctx.fillRect(this.x,this.y,this.width,this.height);
	}
	steer()
	{
		for(var i=0;i<this.instructions.length;i++)
		{
			var inst = this.instructions[i];
			if(inst[0]==this.x && inst[1]==this.y)
			{
				if(inst[2]=="U" && this.speedY==0)
				{
					this.speedX=0;
					this.speedY=-this.height;
					this.lastDirection="U";
				}
				if(inst[2]=="D"&& this.speedY==0)
				{
					this.speedX=0;
					this.speedY=this.height;
					this.lastDirection="D";
				}
				if(inst[2]=="L"&&this.speedX==0)
				{
					this.speedY=0;
					this.speedX=-this.width;
					this.lastDirection="L";
				}
				if(inst[2]=="R"&&this.speedX==0)
				{
					this.speedY=0;
					this.speedX=this.width;
					this.lastDirection="R";
				}
			}	
		}
	}
	follow(direction)
	{
		if(direction=="U")
		{
			this.y+=-this.height;
			this.lastDirection="U";
		}
		if(direction=="D")
		{
			this.y+=this.height;
			this.lastDirection="D";
		}
		if(direction=="L")
		{
			this.x+=-this.width;
			this.lastDirection="L";
		}
		if(direction=="R")
		{
			this.x+=this.width;
			this.lastDirection="R";
		}
		
	}
	
}