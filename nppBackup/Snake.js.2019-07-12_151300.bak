class Snake
{
	constructor(brain)
	{
		this.x = 0;
		this.y = 0;
		this.width = 25;
		this.height = 25;
		this.length =1;
		this.body = [];
		//x y direction
		var firstInstruction = [[0,0,"R"]];
		this.head = new BodyPart(this.x,this.y,this.width,this.height,firstInstruction);
		this.body.push(new BodyPart(this.x-this.width,this.y,this.width,this.height,firstInstruction);)
	}
	update(ctx)
	{
		this.head.instructions = this.instructions;
		this.head.update(ctx,"#0000FF");
		for(var i in body)
		{
			i.update(ctx,"#00FF00");
		}
	}
	steer(direction)
	{
		this.head.instructions.push([this.x,this.y,direction]);
		for(var i in body)
		{
			i.instructions.push([this.x,this.y,direction]);
		}
	}
	enlarge()
	{
		var speedX = this.body[body.length-1].speedX;
		var speedY = this.body[body.length-1].speedY;
		var x,y;
		if(speedX>0)
		{
			x = this.body[body.length-1].x-this.body[body.length-1].height;
			y = this.body[body.length-1].y;
		}
		if(speedX<0)
		{
			x = this.body[body.length-1].x+this.body[body.length-1].width;
			y = this.body[body.length-1].y;
		}
		if(speedY>0)
		{
			y = this.body[body.length-1].y-this.body[body.length-1].height;
			x = this.body[body.length-1].x;
		}
		if(speedY>0)
		{
			y = this.body[body.length-1].y+this.body[body.length-1].height;
			x = this.body[body.length-1].x;
		}
		this.body.push(x,y,this.width,this.height,this.head.instructions);
		this.length++;
	}
}

class BodyPart
{
	constructor(x,y,width,height,instructions,speedX,speedY)
	{
		this.x=x;
		this.y=y;
		this.width = width;
		this.height = height;
		this.instructions = instructions;
		this.speedX=speedX;
		this.speedY=speedY;
	}
	update(ctx,color)
	{
		for(var i=0;i<this.instructions.length;i++)
		{
			var inst = this.instructions[i];
			if(inst[0]==this.x && inst[1]==this.y)
			{
				if(inst[2]=="U" && this.speedY==0)
				{
					this.speedX=0;
					this.speedY=-this.height;
				}
				if(inst[2]=="D"&& this.speedY==0)
				{
					this.speedX=0;
					this.speedY=this.height;
				}
				if(inst[2]=="L"&&this.speedX==0)
				{
					this.speedY=0;
					this.speedX=-this.width;
				}
				if(inst[2]=="R"&&this.speedX==0)
				{
					this.speedY=0;
					this.speedX=this.width;
				}
				instructions.splice(i);
			}
			
		}
		this.x +=this.speedX;
		this.y +=this.speedY;
		ctx.fillStyle = color;
		ctx.fillRect(this.x,this.y,this.width,this.height);
	}
	
}